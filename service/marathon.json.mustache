{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},

  "env": {
    "DCOS_SERVICE_NAME": "{{service.name}}"
  },

  "cmd": "cd \"$MESOS_SANDBOX\" && \"$FLINK_HOME/bin/mesos-appmaster.sh\" -Djobmanager.web.port=$PORT0 -Dmesos.initial-tasks={{service.taskmanagers}} -Dmesos.resourcemanager.tasks.mem={{service.taskmanager_memory}} -Dtaskmanager.numberOfTaskSlots={{service.slots}}",

  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.flink}}",
      "network": "HOST"
    }
  },

  "ports": [0],

  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "portIndex": 0,
      "gracePeriodSeconds": 5,
      "intervalSeconds": 60,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ]
}
